class Solution {
public:
    int smallestRangeI(vector<int>& nums, int k) {
        
            int ma = *max_element(nums.begin(),nums.end());
            int mi = *min_element(nums.begin(),nums.end());
            
            if(ma-mi<=2*k)
                    return 0;
            else
            {
             return ma-mi-2*k;      
            }
     return 0;       
    }
};
